generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  name             String
  role             Role      @default(USER)
  password         String
  bio              String?
  travelInterest   String[]  @default([])
  visitedCountries String[]  @default([])
  payment          Payment[]
  currentLocation  String?
  profileImage     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Travel {
  id          String     @id @default(uuid())
  destination String
  startDate   DateTime
  endDate     DateTime
  budgetRange Int
  travelType  TravelType
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Payment {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  tranId      String   @unique
  valId       String   @unique
  amount      Float
  currency    String
  status      String
  rawResponse Json // full SSLCommerz payload (very useful)
  createdAt   DateTime @default(now())
}

enum TravelType {
  SOLO
  FAMILY
  FRIENDS
}

enum Role {
  ADMIN
  USER
}
