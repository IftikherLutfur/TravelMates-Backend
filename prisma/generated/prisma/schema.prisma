generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  name             String
  role             Role     @default(USER)
  password         String
  bio              String?
  travelInterest   String[] @default([])
  visitedCountries String[] @default([])
  currentLocation  String?
  profileImage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Travel {
  id          String     @id @default(uuid())
  destination String
  startDate   DateTime
  endDate     DateTime
  budgetRange Int
  travelType  TravelType
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum TravelType {
  SOLO
  FAMILY
  FRIENDS
}

enum Role {
  ADMIN
  USER
}
